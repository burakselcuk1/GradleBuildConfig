<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/nowPlayingMoviePoster"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nowPlayingMovieName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:text="sdfasdf"
        android:textColor="@color/black"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/nowPlayingMoviePoster"
        app:layout_constraintStart_toStartOf="@+id/nowPlayingMoviePoster" />

    <TextView
        android:id="@+id/nowPlayingMovieDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sdafafsd"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/nowPlayingMovieName"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/nowPlayingMovieName"
        app:layout_constraintTop_toBottomOf="@+id/nowPlayingMovieName" />

</androidx.constraintlayout.widget.ConstraintLayout>